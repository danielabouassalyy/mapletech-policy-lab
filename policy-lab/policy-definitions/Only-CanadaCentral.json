{
  "properties": {
    "displayName": "Only-CanadaCentral",
    "policyType": "Custom",
    "mode": "All",
    "description": "Deny deployments outside Canada Central",
    "metadata": {
      "category": "Governance",
      "createdBy": "aa8b6736-ee7d-45b0-9403-5f7dceee6569",
      "createdOn": "2025-08-03T15:03:10.1487362Z",
      "updatedBy": null,
      "updatedOn": null
    },
    "version": "1.0.0",
    "parameters": {
      "allowedLocations": {
        "type": "Array",
        "metadata": {
          "displayName": "Allowed locations",
          "description": "The list of locations that resources are allowed to deploy into",
          "strongType": "location"
        },
        "defaultValue": [
          "canadacentral"
        ]
      }
    },
    "policyRule": {
      "if": {
        "not": {
          "field": "location",
          "in": "[parameters('allowedLocations')]"
        }
      },
      "then": {
        "effect": "deny"
      }
    },
    "versions": [
      "1.0.0"
    ]
  },
