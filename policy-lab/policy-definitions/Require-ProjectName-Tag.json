{
  "properties": {
    "displayName": "Require-ProjectName-Tag",
    "policyType": "Custom",
    "mode": "All",
    "description": "Deny any resource creation that doesn’t include a “ProjectName” tag",
    "metadata": {
      "category": "Governance",
      "createdBy": "aa8b6736-ee7d-45b0-9403-5f7dceee6569",
      "createdOn": "2025-08-03T15:07:48.1838517Z",
      "updatedBy": "aa8b6736-ee7d-45b0-9403-5f7dceee6569",
      "updatedOn": "2025-08-03T15:29:23.3930746Z"
    },
    "version": "1.0.0",
    "parameters": {},
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "notEquals": "Microsoft.Authorization/policyAssignments"
          },
          {
            "field": "type",
            "notEquals": "Microsoft.Authorization/policySetAssignments"
          },
          {
            "not": {
              "field": "tags['ProjectName']",
              "exists": "true"
            }
          }
        ]
      },
      "then": {
        "effect": "deny"
      }
    },
    "versions": [
      "1.0.0"
    ]
  },
